{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch JavaFX Application",
            "request": "launch",
            "mainClass": "com.myjavastudy.gui.javafx.HelloJavaFX",
            "cwd": "${workspaceFolder}",
            "vmArgs": [
                "--module-path",
                "/Volumes/study/Development/javafx-sdk-21.0.9/lib",
                "--add-modules",
                "javafx.controls,javafx.fxml"
            ],
            "classPaths": [
                "${workspaceFolder}/target/classes"
            ]
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}",
            "cwd": "${workspaceFolder}",
            "classPaths": [
                "${workspaceFolder}/target/classes"
            ]
        }
    ]
}

